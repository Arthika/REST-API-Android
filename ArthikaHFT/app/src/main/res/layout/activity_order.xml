<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_weight="0.5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/PendingOrders"
                    android:id="@+id/pendingOrderTextView"
                    android:layout_weight="0.5" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CancelPendingOrders"
                    android:id="@+id/pendingOrderCancelButton"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pendingOrderHeaderGridView"
                android:textFilterEnabled="false"
                android:clickable="false"
                android:drawSelectorOnTop="false"
                android:scrollingCache="true"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:verticalSpacing="0dp"
                android:horizontalSpacing="0dp"
                android:gravity="fill_horizontal"
                android:fastScrollAlwaysVisible="false" />

            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pendingOrderGridView"
                android:textFilterEnabled="false"
                android:clickable="false"
                android:drawSelectorOnTop="false"
                android:scrollingCache="true"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:verticalSpacing="0dp"
                android:horizontalSpacing="0dp"
                android:gravity="fill_horizontal"
                android:nestedScrollingEnabled="true"
                android:fastScrollEnabled="false"
                android:fastScrollAlwaysVisible="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_weight="0.5"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/ClosedOrders"
                android:id="@+id/closedOrderTextView" />

            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/closedOrderHeaderGridView"
                android:gravity="fill_horizontal"
                android:horizontalSpacing="0dp"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:scrollingCache="true"
                android:verticalSpacing="0dp"
                android:paddingEnd="0dp"
                android:paddingStart="0dp" />

            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/closedOrderGridView"
                android:nestedScrollingEnabled="true"
                android:fastScrollAlwaysVisible="false"
                android:fastScrollEnabled="false"
                android:gravity="fill_horizontal"
                android:horizontalSpacing="0dp"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:scrollingCache="true"
                android:verticalSpacing="0dp"
                android:paddingEnd="0dp"
                android:paddingStart="0dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
